// 低版本浏览器提示信息
.browsehappy
    font-size: 20px
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 80px
    text-align: center
    line-height: 80px
    background-color: pink
    z-index: 9999
// 路由加载进度条样式
#nprogress .bar
    background: $theme-color !important
// 路由页面标题
.crumbs
    position: relative
    text-transform: capitalize
    font-size: 20px
    line-height: 30px
    padding-left: 3px
    margin: 20px 10px
// 文章代码块样式
.ql-syntax
    padding: 16px !important
    margin: 10px 0
    border-radius: 5px
    overflow: auto
// 引用文本块样式
blockquote
    padding: 10px 15px !important
    margin: 10px 0 !important
    border-left: 4px solid #eb5055
    background-color: #f6f6f6
// 文本高亮的样式
.light
    font-size: 14px !important
    padding: 0 5px !important
    color: #c7254e !important
    background: #f9f2f4 !important
    font-family: Consolas, Monaco, Menlo, Bitstream Vera Sans Mono, DejaVu Sans Mono, monospace !important
code, pre
    color: #e4e7ed
    font-family: Consolas, Monaco, Menlo, Bitstream Vera Sans Mono, DejaVu Sans Mono, monospace !important
// 文本选中颜色&背景色
::selection
    background: $theme-color
    color: #f5f5f5
::-moz-selection
    background: $theme-color
    color: #f5f5f5
::-webkit-selection
    background: $theme-color
    color: #f5f5f5
// 选择器选中项颜色
.el-select-dropdown__item
    &.selected
        color: $theme-color !important
        font-weight: normal !important
// 上浮动画
@keyframes fade-in
    0%
        transform: translateY(20px)
        opacity: 0
    100%
        transform: translateY(0)
        opacity: 1
.myMsg
    .el-message__content
        line-height: 1.5
// 警告框样式
@media (max-width: 500px)
    .myMsg, .myConfirm
        min-width: 300px !important
        max-width: 300px !important